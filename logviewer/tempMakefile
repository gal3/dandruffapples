# this should work on Linux with MESA
GLUTLIBS = -L/usr/X11R6/lib -lGLU -lGL -lglut -lX11 -lXext -lXi #-lXmu
GLUTFLAGS = -I/usr/local/include/GL

# this works on Mac OS X
#GLUTFLAGS = -framework OpenGL -framework GLUT

CC = g++
CXXFLAGS = -g -Wall -O3 $(GLUTFLAGS)
LIBS =  -g -lm $(GLUTLIBS)

SRC = robot.h robot.cpp home.h home.cpp logviewer.h logviewer.cpp puckstack.h puckstack.cpp gui.h gui.cpp main.cpp

all: logviewer

logviewer: $(SRC)
	$(CC) $(CXXFLAGS) $(LIBS) -o $@ $(SRC) 

clean:
	rm *.o logviewer

